			</resource>
		</resources>
	</build>

	<profiles>
		<profile>
			<id>jboss-eap-6.0</id>
			<build>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
						<filtering>true</filtering>
					</resource>
					<resource>
						<directory>src/main/eap-6.0-resources</directory>
					</resource>
				</resources>
				<plugins>
					<!-- -->
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>compile</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<replace file="target/classes/META-INF/persistence.xml">
											<replacetoken><![CDATA[<mapping-file>META-INF/JBPMorm.xml</mapping-file>]]></replacetoken>
											<replacevalue><![CDATA[<mapping-file>META-INF/JBPMorm-JPA2.xml</mapping-file>]]></replacevalue>
										</replace>
										<replace file="target/classes/META-INF/persistence.xml">
											<replacetoken><![CDATA[<mapping-file>META-INF/ProcessInstanceInfo.hbm.xml</mapping-file>]]></replacetoken>
											<replacevalue><![CDATA[<!-- <mapping-file>META-INF/ProcessInstanceInfo.hbm.xml</mapping-file> -->]]></replacevalue>
										</replace>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
